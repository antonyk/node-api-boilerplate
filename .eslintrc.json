{
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": ["import"],
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "no-use-before-define": "warn",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    // "global-require": "warn",
    "dot-notation": "warn",
    "prefer-destructuring": "warn",

    "import/no-useless-path-segments": "warn"
  }
}
